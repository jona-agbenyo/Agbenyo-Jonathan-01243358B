import math  # For advanced math functions

# Basic arithmetic operations with variable number of arguments
def add(*numbers):
    return sum(numbers)

def subtract(*numbers):
    if not numbers:
        return 0
    result = numbers[0]
    for num in numbers[1:]:
        result -= num
    return result

def multiply(*numbers):
    result = 1
    for num in numbers:
        result *= num
    return result

def divide(*numbers):
    if not numbers:
        return 0
    result = numbers[0]
    for num in numbers[1:]:
        if num == 0:
            return "Error: Division by zero"
        result /= num
    return result

# BONUS: Advanced functions
def power(base, exponent):
    return math.pow(base, exponent)

def square_root(number):
    if number < 0:
        return "Error: Cannot take square root of negative number"
    return math.sqrt(number)

# Menu-driven simple calculator
def calculator():
    print("=== Simple Calculator ===")
    print("Select an operation:")
    print("1. Add")
    print("2. Subtract")
    print("3. Multiply")
    print("4. Divide")
    print("5. Power (base ^ exponent)")
    print("6. Square Root")
    print("0. Exit")

    while True:
        choice = input("\\nEnter your choice (0-6): ")

        if choice == "0":
            print("Goodbye!")
            break

        elif choice in ["1", "2", "3", "4"]:
            nums = input("Enter numbers separated by space: ")
            numbers = list(map(float, nums.split()))

            if choice == "1":
                print("Result:", add(*numbers))
            elif choice == "2":
                print("Result:", subtract(*numbers))
            elif choice == "3":
                print("Result:", multiply(*numbers))
            elif choice == "4":
                print("Result:", divide(*numbers))

        elif choice == "5":
            base = float(input("Enter base: "))
            exponent = float(input("Enter exponent: "))
            print("Result:", power(base, exponent))

        elif choice == "6":
            number = float(input("Enter number: "))
            print("Result:", square_root(number))

        else:
            print("Invalid choice. Please try again.")

# Run the calculator
calculator()
